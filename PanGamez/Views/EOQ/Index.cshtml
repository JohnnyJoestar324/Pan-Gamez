@model PanGamez.Models.EOQ
@{
    ViewData["Title"] = "Calcular EOQ";
}

<h1>Calcular EOQ</h1>

<form asp-action="Calculate">
    <div class="form-group">
        <label asp-for="Demanda">Demanda:</label>
        <input asp-for="Demanda" class="form-control" />
        <span asp-validation-for="Demanda" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CostoPedido">Costo por Pedido:</label>
        <input asp-for="CostoPedido" class="form-control" />
        <span asp-validation-for="CostoPedido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CostoMantenimiento">Costo de Mantenimiento Anual:</label>
        <input asp-for="CostoMantenimiento" class="form-control" />
        <span asp-validation-for="CostoMantenimiento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PeriodoSeleccionado">Periodo:</label>
        <select asp-for="PeriodoSeleccionado" class="form-control">
            <option value="365">Año</option>
            <option value="12">Mes</option>
            <option value="52">Semana</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Calcular EOQ</button>
</form>

@if (ViewData["EOQ"] != null)
{
    <h2>Resultado: @ViewData["Resultado"]</h2>
    <h4>Análisis:</h4>
    <p> @ViewData["EOQ"]</p>
}
